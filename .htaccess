# Headers de sécurité pour améliorer les bonnes pratiques
<IfModule mod_headers.c>
    # Content Security Policy (CSP) - Mode permissif pour éviter les blocages
    Header set Content-Security-Policy "default-src 'self' http: https: data: 'unsafe-inline' 'unsafe-eval';"

    # HSTS désactivé temporairement pour éviter les problèmes de certificat
    # Header always set Strict-Transport-Security "max-age=86400"

    # Cross-Origin-Opener-Policy (COOP)
    Header set Cross-Origin-Opener-Policy "same-origin"

    # Cross-Origin-Resource-Policy
    Header set Cross-Origin-Resource-Policy "same-origin"

    # X-Content-Type-Options - Prévient le MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # X-Frame-Options - Prévient le clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Cache simple et compatible avec tous les navigateurs
<IfModule mod_headers.c>
    # HTML toujours frais - pas de cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # CSS et JS - cache court de 1 heure
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=3600, public"
    </FilesMatch>

    # Images - cache de 7 jours
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "max-age=604800, public"
    </FilesMatch>

    # Fonts - cache de 30 jours
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
</IfModule>

# Compression Gzip simple et universelle
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Redirections simples - Compatible tous hébergeurs
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirection www vers non-www (unifie le domaine)
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # Redirection HTTP vers HTTPS (simple et universelle)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
</IfModule>